<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheGameDB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wedge_wood</item>
        <item name="colorPrimaryVariant">@color/san_juan</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cranberry</item>
        <item name="colorSecondaryVariant">@color/portica</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSearchBar">@color/concrete</item>
        <item name="colorDefaultText">@color/black</item>
    </style>

    <!--  No Action Bar Theme  -->
    <style name="Theme.TheGameDB.NoActionBar" parent="Theme.TheGameDB">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  Component Style: App Bar Title  -->
    <style name="TextAppearance.TheGameDB.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!--  Component Style: App Bar Subtitle  -->
    <style name="TextAppearance.TheGameDB.Widget.ActionBar.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:fontFamily">@font/lato</item>
    </style>
</resources>