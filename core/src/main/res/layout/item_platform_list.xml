<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/layout_platform_size"
    android:layout_height="@dimen/layout_platform_size"
    app:cardBackgroundColor="@color/cranberry"
    app:cardCornerRadius="@dimen/card_view_medium_radius"
    app:cardUseCompatPadding="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/platform_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_padding_size_small"
        tools:src="@drawable/ic_playstation" />

</androidx.cardview.widget.CardView>